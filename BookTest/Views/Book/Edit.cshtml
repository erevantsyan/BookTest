@model BookTest.Models.Book

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Редактирование @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Author">Имя автора</label>
                        <input asp-for="Author" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Название книги</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="DatePublic">Дата публикации</label>
                        <input asp-for="DatePublic" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Вернуться</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
