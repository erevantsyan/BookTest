@model BookTest.Models.Book

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Просмотр @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="Author">Имя автора</label>
                    <input asp-for="Author" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Name">Название книги</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="DatePublic">Дата публикации</label>
                    <input asp-for="DatePublic" class="form-control" />
                </div>

                <div class="form-group">
                    <a class="btn btn-outline-secondary" asp-action="Index">Вернуться</a>
                </div>
            </div>
        </div>
    </div>
</div>
